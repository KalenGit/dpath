<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="NoActionBar" parent="@android:style/Theme.Holo.Light">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>
    <style name="TextLabel" parent="TextAppearance.AppCompat">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/white</item>
        <item name="android:textSize">20sp</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@color/white</item>
        <item name="colorControlNormal">@color/white</item>
        <item name ="android:editTextColor">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
    </style>
    <style name="nav" parent="Widget.Design.BottomNavigationView">
    <item name="fontFamily">@font/avenir</item>
    </style>
    <style name="RatingBarGreen" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/lightGreen</item>
        <item name="colorControlActivated">@color/darkGreen</item>
    </style>
    <style name="RatingBarOrange" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/lightOrange</item>
        <item name="colorControlActivated">@color/darkOrange</item>
    </style>
    <style name="RatingBarRed" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/lightRed</item>
        <item name="colorControlActivated">@color/darkRed</item>
    </style>
    <style name="RatingBarBlue" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/lightBlue</item>
        <item name="colorControlActivated">@color/darkBlue</item>
    </style>
    <style name="RatingBarPurple" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/lightPurple</item>
        <item name="colorControlActivated">@color/darkPurple</item>
    </style>
    <style name="RatingBarTurq" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/lightTurq</item>
        <item name="colorControlActivated">@color/darkTurq</item>
    </style>
    <style name="spinner" parent="@android:style/Widget.Holo.DropDownItem.Spinner">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/registerColor</item>
    </style>


</resources>
