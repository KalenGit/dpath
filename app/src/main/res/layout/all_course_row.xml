<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="375dp"
    android:id="@+id/all_course_row"
    android:layout_height="80dp"
    android:orientation="horizontal"
    android:layout_marginTop="10dp"
    android:background="@drawable/recycler_shape"
    android:layout_marginLeft="20dp">

    <TextView
        android:id="@+id/child_course_number"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:text="text"
        android:fontFamily="@font/avenirbold"
        android:background="@drawable/recycler_shape2"
        android:textColor="@color/darkGreen"
        android:textSize="18sp"
        android:gravity="center"/>
    <TextView
        android:id="@+id/child_course_title"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="test"
        android:paddingLeft="12dp"
        android:fontFamily="@font/avenir"
        android:textColor="@color/nav"
        android:textSize="15sp"
        android:layout_gravity="center_vertical"
        />
    <ImageView
        android:id="@+id/child_save_icon"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/ic_check_black_24dp"
        android:paddingTop="25dp"
        android:paddingBottom="25dp"
        android:layout_gravity="center_vertical"/>

</LinearLayout>